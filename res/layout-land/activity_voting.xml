<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".VotingActivity" >

    <LinearLayout
        android:id="@+id/votingButtonArea"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/time" />

        <EditText
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:inputType="number"
            android:minWidth="50dp" />

        <ImageButton
            android:id="@+id/barcodeButton"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:onClick="showQRCode"
            android:scaleType="fitCenter"
            android:src="@drawable/barcode" />

        <ImageButton
            android:id="@+id/startVotingButton"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:onClick="startStopVoting"
            android:scaleType="fitCenter"
            android:src="@drawable/play" />

        <ImageButton
            android:id="@+id/resetVotes"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:onClick="resetVoting"
            android:scaleType="fitCenter"
            android:src="@drawable/undo" />

        <ImageButton
            android:id="@+id/correctResultButton"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:onClick="showCorrectResult"
            android:scaleType="fitCenter"
            android:src="@drawable/bar_yellow" />

        <ImageButton
            android:id="@+id/resultButton"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:onClick="showResults"
            android:scaleType="fitCenter"
            android:src="@drawable/evaluate" />

        <ImageButton
            android:id="@+id/previousButton"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:onClick="previousVoting"
            android:scaleType="fitCenter"
            android:src="@drawable/previous" />

        <TextView
            android:id="@+id/questionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:onClick="nextVoting"
            android:scaleType="fitCenter"
            android:src="@drawable/next" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragmentArea"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_below="@id/votingButtonArea"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/votingFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8" >
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragmentArea"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/voting_lectureID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom" />

        <TextView
            android:id="@+id/voting_votes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_marginLeft="300dp" 
            android:layout_marginStart="300dp"/>
    </LinearLayout>

</RelativeLayout>